generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model LoginHistory {
  id        String   @id @default(cuid())
  userId    String
  loginAt   DateTime @default(now())
  ipAddress String?
  user      User     @relation(fields: [userId], references: [id])
}

model ResumeLog {
  id           String   @id @default(cuid())
  createdAt    DateTime @default(now())
  jobTitle     String?
  companyName  String?
  matchScore   Int?
  originalName String?
  userEmail    String?
  userId       String?
  status       String   @default("SUCCESS")
  user         User?    @relation(fields: [userId], references: [id])
}

model SystemActivity {
  id        String   @id @default(cuid())
  userId    String
  action    String
  details   String?
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
}

model User {
  id             String           @id @default(cuid())
  email          String           @unique
  password       String
  name           String?
  phone          String?
  status         String           @default("PENDING")
  
  // Subscription Fields
  plan                String   @default("FREE") // FREE or PRO
  creditsUsed         Int      @default(0) // Resumes generated this month
  subscriptionExpires DateTime? 
  
  createdAt      DateTime         @default(now())
  LoginHistory   LoginHistory[]
  ResumeLog      ResumeLog[]
  SystemActivity SystemActivity[]
}
